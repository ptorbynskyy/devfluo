{
	"name": "devfluo",
	"version": "0.4.0",
	"description": "A Model Context Protocol server for development workflow assistance",
	"type": "module",
	"main": "build/index.js",
	"bin": {
		"devfluo": "build/index.js"
	},
	"files": [
		"build/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"prepare": "npm run build",
		"prebuild": "npm run lint:fix && npm run clean",
		"build": "tsc && node scripts/build.js",
		"watch": "tsc --watch",
		"start": "node build/index.js",
		"inspector": "PROJECT_ROOT=./tmp npx @modelcontextprotocol/inspector build/index.js",
		"dev": "npm run build && npm run start",
		"clean": "rm -rf build",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch",
		"lint": "biome check",
		"format": "biome format",
		"lint:fix": "biome check --fix --unsafe"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"typescript",
		"development",
		"workflow"
	],
	"author": "Petro",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/your-username/devfluo.git"
	},
	"homepage": "https://github.com/your-username/devfluo#readme",
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"@langchain/core": "^0.3.77",
		"@langchain/textsplitters": "^0.1.0",
		"@modelcontextprotocol/sdk": "^1.17.4",
		"@xenova/transformers": "^2.17.2",
		"eta": "^3.5.0",
		"gray-matter": "^4.0.3",
		"vectra": "^0.11.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^22.0.0",
		"typescript": "^5.9.2"
	}
}
