{
	"name": "dev-flow-mcp",
	"version": "0.1.0",
	"description": "A Model Context Protocol server for development workflow assistance",
	"type": "module",
	"main": "build/index.js",
	"bin": {
		"dev-flow-mcp": "build/index.js"
	},
	"scripts": {
		"build": "tsc && node scripts/build.js",
		"watch": "tsc --watch",
		"start": "node build/index.js",
		"inspector": "PROJECT_ROOT=./tmp npx @modelcontextprotocol/inspector build/index.js",
		"dev": "npm run build && npm run start",
		"clean": "rm -rf build",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch",
		"lint": "biome check",
		"format": "biome format",
		"lint:fix": "biome check --fix --unsafe"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"typescript",
		"development",
		"workflow"
	],
	"author": "Petro",
	"license": "MIT",
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.4",
		"eta": "^3.5.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^22.0.0",
		"typescript": "^5.9.2"
	}
}
